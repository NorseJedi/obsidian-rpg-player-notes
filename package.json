{
	"name": "obsidian-plugin-boilerplate",
	"version": "1.0.0",
	"description": "This is a boilerplate setup for Obsidian plugin development using typescript, scss, vite and biome (https://obsidian.md)",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"dev": "pnpm exec vite build --watch --mode=development",
		"build": "pnpm exec vite build",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "pnpm exec biome check",
		"lint:fix": "pnpm exec biome check --write"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@codemirror/language": "^6.11.3",
		"@types/node": "^24.7.0",
		"builtin-modules": "^5.0.0",
		"obsidian": "^1.10.0",
		"obsidian-typings": "^4.58.0",
		"sass-embedded": "^1.93.2",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.1.9"
	}
}
